# Batch Connect app configuration file
#
---
cluster:
  - 'tinkercliffs'

# Define attribute values that aren't meant to be modified by the user within
# the Dashboard form
attributes:
  # Set and load the  modules and environment that need to be loaded for Jupyter to run

  bc_queue: normal_q
#    help: |
#      - To request a GPU enabled queue, preface it with v100_. Example: v100_normal_q

  bc_num_hours:
    label: Number of hours (min-1, max-48)
    required: true
    value: 1
    min: 1
    max: 48
    step: 1

  bc_account: roberthildebrand
#    widget: text_field
#    label: Account
#    value: ""
#    help: |
#       - The allocation you would like to use for SLURM.

#  reservation:
#    widget: text_field
#    label: Reservation
#    value: ""
#    help: |
#       - The allocation reservation you would like to use for SLURM.

  num_cores:
    widget: number_field
    label: Number of cores per node (min-1, max-8)
    value: 1
    min: 1
    max: 8
    step: 1

  Container: ood-jupyter-ice3434_Aug2021.sif
#    widget: select
#    label: "use container"
#    help: |
#       - These Images are pulled directly from the Jupyter Docker Stacks.  See here: https://jupyter-docker-stacks.readthedocs.io/en/latest/using/selecting.html#core-stacks

# All of the attributes that make up the Dashboard form (in respective order),
# and made available to the submit configuration file and the template ERB
# files
#
form:
  - Container
  - bc_account
  - reservation
  - bc_queue
  - bc_num_hours
  - num_cores
  - bc_email_on_started
